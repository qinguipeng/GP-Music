/* pages/detail-video/detail-video.wxss */
page {
	height: 100vh;
}

.video {
	width: 100%;
	height: 450rpx;
	display: flex;
	/* position: fixed; */
}

.scroll {
	height: calc(100% - 450rpx);
	/* height: 500px; */
}

.mvInfo {
	padding: 30rpx;
}

.artist {
	display: flex;
	width: 100%;
	height: 80rpx;
}

.artist .artistPhoto {
	/* flex: 1; */
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
}

.artist .artistPhoto image {
	scale: 100%;
	width: 100%;
	height: 100%;
}

.artist .artistName {
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 25rpx;
	font-size: 28rpx;
	font-weight: 700;
}

.mvName {
	font-weight: 800;
	padding: 15rpx 0;
}

.mvDescEllipsis {
	font-size: 24rpx;
	/*默认 只显示两行 */
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.mvDescShowAll {
	/* 点击显示全部 */
	font-size: 24rpx;

}



.countAndPub {
	display: flex;
	padding-top: 20rpx;
	font-size: 24rpx;
	color: rgb(128, 128, 115);
}

.mvplayCount,
.mvPublishTime {
	flex: 1;
}

.mvPublishTime {
	text-align: right;
}


.recommend {
	padding: 30rpx;
}

.title {
	font-weight: 700;
	margin-bottom: 10rpx;
}

.recommendItem {
	display: flex;
	padding: 10rpx 0;
}

.left {
	flex: 2;
	position: relative;
	width: 100%;
	height: 140rpx;
	overflow: hidden;
	border-radius: 10rpx;
}


.left image {
	width: 100%;
	height: 100%;
}

.left .text {
	position: absolute;
	bottom: 14rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
	width: 100%;
	font-size: 16rpx;
	color: #fff;
}

.left .text .durationms,
.left .text .playTime {
	flex: 1;
	text-align: center;
}


.right {
	position: relative;
	flex: 3;
	padding-left: 20rpx;
	font-size: 28rpx;

}

.right .creator {
	position: absolute;
	bottom: 0;
	font-size: 20rpx;
}